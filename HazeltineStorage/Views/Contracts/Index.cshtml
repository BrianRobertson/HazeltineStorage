@model IEnumerable<HazeltineStorage.Models.Contract>

@{
    ViewBag.Title = "Index";
}

<h2>Contracts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Contractee Name
            @*@Html.DisplayNameFor(model => model.Customer.FirstName)
            @Html.DisplayNameFor(model => model.Customer.LastName)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfMonthDue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DayOfMonthGracePeriodEnds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContractTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FirstName)
            @Html.DisplayFor(modelItem => item.Customer.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfMonthDue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfMonthGracePeriodEnds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContractTotal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Add Storage Units", "AddStorage", new { id = item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to Dashboard", "Index", "HazeltineManager")
</div>
