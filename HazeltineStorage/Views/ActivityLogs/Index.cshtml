@model IEnumerable<HazeltineStorage.Models.ActivityLog>

@{
    ViewBag.Title = "Index";
}

<h2>Activity Log</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Activity Or Message To
            @*@Html.DisplayNameFor(model => model.Customer.UserId)
            @Html.DisplayNameFor(model => model.Customer.FirstName)
            @Html.DisplayNameFor(model => model.Customer.LastName)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageType.MessageType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageType.MessageChannel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            Logged By
            @*@Html.DisplayNameFor(model => model.User.Email)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.FirstName)
            @Html.DisplayFor(modelItem => item.Customer.LastName)
            @*@Html.DisplayFor(modelItem => item.Customer.UserId)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LogDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageType.MessageType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MessageType.MessageChannel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back to Dashboard", "Index", "HazeltineManager")
</div>